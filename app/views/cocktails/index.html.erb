<div class="banner">
  <h1>Cocktails</h1>
  <h2>because you want to forget your worries</h2>
</div>

<div class="container">
  <div class="row">
    <% @cocktail.each do |drink| %>
    <div class="col-md-4 text-center">
      <div>
        <p class="card-category", style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url(<%= cl_image_path (drink.photo.attached? ? drink.photo.key : 'RHC5pou4XQiiCabGirpg4wNs')%>)">
          <%= link_to drink[:name], cocktail_path(drink) %></p>
        </div>
      </div>
      <% end %>

    </div>
    <div class="btn btn-centered"><%= link_to "Create a new Cocktail", new_cocktail_path %></div>
  </div>


