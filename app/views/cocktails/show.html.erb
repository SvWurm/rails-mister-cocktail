
<div class="col-6 offset-3">
  <h1 ><%= @cocktail.name %></h1>

  <h3>Ingredients</h3>
  <ul>
    <% @cocktail.doses.each do |dose| %>
    <li><%= dose.ingredient.name %>,
      <%= dose.description %>
      <%= link_to "Delete", cocktail_dose_path(@cocktail, dose),
      method: :delete,
      data: { confirm: "Are you sure?" } %>
    </li>
    <% end %>
  </ul>
  <%= @cocktail[:ingredient] %>

  <h3>Add a Dose</h3>



  <%= simple_form_for [@cocktail, @dose] do |f| %>
  <%= f.association :ingredient %>
  <%= f.input :description %>
  <%= f.submit :submit %>
  <% end %>

  <%= link_to "Delete", cocktail_path(@cocktail),
      method: :delete,
      data: { confirm: "Are you sure?" } %>

  <%= link_to "Update", edit_cocktail_path(@cocktail) %>
  <%= link_to "Back to home", cocktails_path %>
</div>
